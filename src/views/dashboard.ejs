<!DOCTYPE html>
<html lang="fa" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>داشبورد</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.17/index.global.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        font-family: "Vazirmatn", sans-serif;
      }
      #calendar {
        max-width: 1100px;
        margin: 40px auto;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">CRM</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/crm/create-activity"
                >ایجاد فعالیت جدید</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/crm/accounts">حساب‌ها</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <span class="nav-link">کاربر: <%= user.fullname %></span>
            </li>
            <li class="nav-item">
              <button id="logoutBtn" class="nav-link btn btn-link">خروج</button>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid mt-4">
      <div class="d-flex justify-content-end mb-3">
        <button
          class="btn btn-success"
          data-bs-toggle="modal"
          data-bs-target="#createTaskModal"
        >
          <i class="bi bi-plus-circle"></i> ایجاد وظیفه جدید
        </button>
      </div>
      <h2 class="text-center mb-4">فعالیت‌های من</h2>

      <!-- Activity Filter Buttons -->
      <div class="row mb-3">
        <div class="col-md-8">
          <div class="btn-group" role="group">
            <button type="button" id="allActivitiesTab" class="btn btn-outline-primary">
              همه فعالیت‌ها
            </button>
            <button type="button" id="myActivitiesTab" class="btn btn-primary">
              فعالیت‌های من
            </button>
            <button type="button" id="specificActivitiesTab" class="btn btn-outline-primary">
              انتخابی فعالیت‌ها
            </button>
          </div>
        </div>
        <div class="col-md-4 text-end">
          <div id="ownerFilterContainer" style="display: none;">
            <select id="ownerFilter" class="form-select" multiple="multiple">
              <option value="">انتخاب مالک...</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Calendar Container -->
      <div class="row">
        <div class="col-12">
          <div class="card h-100">
            <div class="card-body p-0">
              <div id="calendar" style="height: calc(100vh - 200px);"></div>
              <div class="text-center mt-3">
                <button id="loadMoreActivitiesBtn" class="btn btn-primary" style="display: none;">
                  بارگذاری فعالیت‌های بیشتر
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Activity Details Modal -->
    <div class="modal fade" id="activityDetailsModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">جزئیات فعالیت</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <h6>موضوع</h6>
              <p id="activitySubject" class="mb-0"></p>
            </div>
            <div class="mb-3">
              <h6>توضیحات</h6>
              <p id="activityDescription" class="mb-0"></p>
            </div>
            <div class="mb-3">
              <h6>تاریخ شروع</h6>
              <p id="activityStartDate" class="mb-0"></p>
            </div>
            <div class="mb-3">
              <h6>تاریخ پایان</h6>
              <p id="activityDueDate" class="mb-0"></p>
            </div>
            <div class="mb-3">
              <h6>اولویت</h6>
              <p id="activityPriority" class="mb-0"></p>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
            <button type="button" id="editTaskBtn" class="btn btn-primary">ویرایش</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Task Modal -->
    <div class="modal fade" id="editTaskModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">ویرایش وظیفه</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <form id="editTaskForm">
              <input type="hidden" id="editTaskId">
              <div class="mb-3">
                <label for="editTaskSubject" class="form-label">موضوع</label>
                <input type="text" class="form-control" id="editTaskSubject" required>
              </div>
              <div class="mb-3">
                <label for="editTaskDescription" class="form-label">توضیحات</label>
                <textarea class="form-control" id="editTaskDescription" rows="3"></textarea>
              </div>
              <div class="mb-3">
                <label for="editTaskStartDate" class="form-label">تاریخ شروع</label>
                <input type="datetime-local" class="form-control" id="editTaskStartDate" required>
              </div>
              <div class="mb-3">
                <label for="editTaskDueDate" class="form-label">تاریخ پایان</label>
                <input type="datetime-local" class="form-control" id="editTaskDueDate" required>
              </div>
              <div class="mb-3">
                <label for="editTaskPriority" class="form-label">اولویت</label>
                <select class="form-select" id="editTaskPriority" required>
                  <option value="0">کم</option>
                  <option value="1">عادی</option>
                  <option value="2">زیاد</option>
                  <option value="3">فوری</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="editTaskRegarding" class="form-label">مربوط به</label>
                <select class="form-select" id="editTaskRegarding">
                  <option value="">انتخاب کنید...</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="editTaskStatus" class="form-label">وضعیت</label>
                <select class="form-select" id="editTaskStatus" required>
                  <option value="0">در جریان</option>
                  <option value="1">تکمیل</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="editTaskAssignedTo" class="form-label">تخصیص به</label>
                <select class="form-select" id="editTaskAssignedTo" required>
                  <option value="">انتخاب کنید...</option>
                </select>
              </div>
              <div class="mb-3">
                <label class="form-label">مالک قبلی</label>
                <input type="text" class="form-control" id="editPreviousOwner" readonly>
              </div>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="editTaskSeen">
                <label class="form-check-label" for="editTaskSeen">مشاهده شده</label>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
            <button type="submit" form="editTaskForm" class="btn btn-primary">ذخیره تغییرات</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Create Task Modal -->
    <div class="modal fade" id="createTaskModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">ایجاد وظیفه جدید</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <form id="createTaskForm">
              <div class="mb-3">
                <label for="taskSubject" class="form-label">موضوع</label>
                <input type="text" class="form-control" id="taskSubject" required>
              </div>
              <div class="mb-3">
                <label for="taskDescription" class="form-label">توضیحات</label>
                <textarea class="form-control" id="taskDescription" rows="3"></textarea>
              </div>
              <div class="mb-3">
                <label for="taskStartDate" class="form-label">تاریخ شروع</label>
                <input type="datetime-local" class="form-control" id="taskStartDate" required>
              </div>
              <div class="mb-3">
                <label for="taskDueDate" class="form-label">تاریخ پایان</label>
                <input type="datetime-local" class="form-control" id="taskDueDate" required>
              </div>
              <div class="mb-3">
                <label for="taskPriority" class="form-label">اولویت</label>
                <select class="form-select" id="taskPriority" required>
                  <option value="0">کم</option>
                  <option value="1">عادی</option>
                  <option value="2">زیاد</option>
                  <option value="3">فوری</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="taskRegarding" class="form-label">مربوط به</label>
                <select class="form-select" id="taskRegarding">
                  <option value="">انتخاب کنید...</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="taskOwner" class="form-label">مالک</label>
                <select class="form-select" id="taskOwner" required>
                  <option value="">انتخاب کنید...</option>
                </select>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
            <button type="submit" form="createTaskForm" class="btn btn-primary">ایجاد وظیفه</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Toasts -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div
        id="errorToast"
        class="toast bg-danger text-white"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="toast-body"></div>
      </div>
      <div
        id="successToast"
        class="toast bg-success text-white"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="toast-body"></div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.17/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/luxon@3.4.4/build/global/luxon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/min/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment-timezone@0.5.43/builds/moment-timezone-with-data.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment-jalaali@0.10.4/builds/moment-jalaali.js"></script>
    <script>
      // Set current user information
      window.currentUser = {
        id: "<%= user.id %>",
        fullname: "<%= user.fullname %>",
      };
    </script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/calendar.js"></script>
  </body>
</html>
