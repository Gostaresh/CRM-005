<!DOCTYPE html>
<html lang="fa" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>داشبورد</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.17/index.global.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        font-family: "Vazirmatn", sans-serif;
      }
      #calendar {
        max-width: 1100px;
        margin: 40px auto;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">CRM</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/crm/create-activity"
                >ایجاد فعالیت جدید</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/crm/accounts">حساب‌ها</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <span class="nav-link">کاربر: <%= user.fullname %></span>
            </li>
            <li class="nav-item">
              <button id="logoutBtn" class="nav-link btn btn-link">خروج</button>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="d-flex justify-content-end mb-3">
        <button
          class="btn btn-success"
          data-bs-toggle="modal"
          data-bs-target="#createTaskModal"
        >
          <i class="bi bi-plus-circle"></i> ایجاد وظیفه جدید
        </button>
      </div>
      <h2 class="text-center mb-4">فعالیت‌های من</h2>

      <!-- Buttons to toggle between views -->
      <div class="activity-tabs mb-3 text-center">
        <button id="allActivitiesTab" class="btn btn-outline-primary">همه فعالیت‌ها</button>
        <button id="myActivitiesTab" class="btn btn-primary">فعالیت‌های من</button>
        <button id="specificActivitiesTab" class="btn btn-outline-primary">انتخابی فعالیت‌ها</button>
      </div>

      <!-- Owner Filter -->
      <div id="ownerFilterContainer" class="mb-3 text-center">
        <select id="ownerFilter" class="form-select" multiple="multiple" style="width: 300px; display: inline-block;">
          <!-- Options will be populated by JS -->
        </select>
      </div>

      <!-- Calendar -->
      <div id="calendar"></div>

      <!-- Load More Button -->
      <div class="text-center mt-3">
        <button id="loadMoreActivitiesBtn" class="btn btn-primary">
          بارگذاری فعالیت‌های بیشتر
        </button>
      </div>
    </div>

    <!-- Activity Details Modal -->
    <div
      class="modal fade"
      id="activityDetailsModal"
      tabindex="-1"
      aria-labelledby="activityDetailsModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
          <div class="modal-header bg-primary text-white">
            <h5 class="modal-title" id="activityDetailsModalLabel">
              <i class="bi bi-info-circle"></i> جزئیات فعالیت
            </h5>
            <button
              type="button"
              class="btn-close btn-close-white"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="mb-2">
              <i class="bi bi-card-text"></i>
              <strong>موضوع:</strong>
              <span id="activitySubject" class="ms-2"></span>
            </div>
            <div class="mb-2">
              <i class="bi bi-tag"></i>
              <strong>نوع فعالیت:</strong>
              <span
                id="activityType"
                class="badge bg-info text-dark ms-2"
              ></span>
            </div>
            <div class="mb-2">
              <i class="bi bi-calendar-event"></i>
              <strong>شروع:</strong>
              <span id="activityStart" class="ms-2"></span>
            </div>
            <div class="mb-2">
              <i class="bi bi-calendar-check"></i>
              <strong>پایان:</strong>
              <span id="activityEnd" class="ms-2"></span>
            </div>
            <div class="mb-2">
              <i class="bi bi-person"></i>
              <strong>مالک:</strong>
              <span id="activityOwner" class="ms-2"></span>
            </div>
            <div class="mb-2">
              <i class="bi bi-chat-left-text"></i>
              <strong>توضیحات:</strong>
              <span id="activityDescription" class="ms-2"></span>
            </div>
            <div class="mb-2">
              <i class="bi bi-hash"></i>
              <strong>شناسه فعالیت:</strong>
              <span id="activityId" class="ms-2"></span>
              <button
                class="btn btn-sm btn-outline-secondary"
                onclick="navigator.clipboard.writeText(document.getElementById('activityId').textContent)"
              >
                <i class="bi bi-clipboard"></i>
              </button>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              بستن
            </button>
            <button type="button" id="editTaskBtn" class="btn btn-primary">
              ویرایش
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Task Modal -->
    <div
      class="modal fade"
      id="editTaskModal"
      tabindex="-1"
      aria-labelledby="editTaskModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editTaskModalLabel">ویرایش وظیفه</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="editTaskForm">
              <input type="hidden" id="editTaskId" name="activityId" />
              <div class="mb-3">
                <label for="editTaskSubject" class="form-label">موضوع</label>
                <input
                  type="text"
                  class="form-control"
                  id="editTaskSubject"
                  name="subject"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="editTaskDescription" class="form-label"
                  >توضیحات</label
                >
                <textarea
                  class="form-control"
                  id="editTaskDescription"
                  name="description"
                ></textarea>
              </div>
              <div class="mb-3">
                <label for="editTaskStartDate" class="form-label"
                  >تاریخ شروع</label
                >
                <input
                  type="text"
                  class="form-control persian-datepicker"
                  id="editTaskStartDate"
                  name="scheduledstart"
                />
              </div>
              <div class="mb-3">
                <label for="editTaskDueDate" class="form-label"
                  >تاریخ سررسید</label
                >
                <input
                  type="text"
                  class="form-control persian-datepicker"
                  id="editTaskDueDate"
                  name="scheduledend"
                />
              </div>
              <div class="mb-3">
                <label for="editTaskPriority" class="form-label">اولویت</label>
                <select
                  class="form-select"
                  id="editTaskPriority"
                  name="prioritycode"
                >
                  <option value="1">Normal</option>
                  <option value="2">High</option>
                  <option value="0">Low</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="editTaskRegarding" class="form-label"
                  >مرتبط با</label
                >
                <select
                  class="form-select"
                  id="editTaskRegarding"
                  name="regardingobjectid"
                >
                  <option value="">انتخاب کنید...</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary">ذخیره</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Create Task Modal -->
    <div
      class="modal fade"
      id="createTaskModal"
      tabindex="-1"
      aria-labelledby="createTaskModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <form id="createTaskForm">
            <div class="modal-header bg-primary text-white">
              <h5 class="modal-title" id="createTaskModalLabel">
                ایجاد وظیفه جدید
              </h5>
              <button
                type="button"
                class="btn-close btn-close-white"
                data-bs-dismiss="modal"
                aria-label="بستن"
              ></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="taskSubject" class="form-label"
                  >موضوع <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="taskSubject"
                  name="subject"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="taskDescription" class="form-label">توضیحات</label>
                <textarea
                  class="form-control"
                  id="taskDescription"
                  name="description"
                ></textarea>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">وضعیت فعالیت</label>
                  <input
                    type="text"
                    class="form-control"
                    value="Open"
                    disabled
                  />
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">وضعیت دلیل</label>
                  <input
                    type="text"
                    class="form-control"
                    value="Not Started"
                    disabled
                  />
                </div>
              </div>
              <div class="mb-3">
                <label for="customworkflowid" class="form-label"
                  >customworkflowid</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="customworkflowid"
                  name="customworkflowid"
                />
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="taskStartDate" class="form-label"
                    >تاریخ شروع</label
                  >
                  <input
                    type="text"
                    class="form-control persian-datepicker"
                    id="taskStartDate"
                    name="scheduledstart"
                    placeholder="تاریخ شروع"
                  />
                </div>
                <div class="col-md-6 mb-3">
                  <label for="taskDueDate" class="form-label"
                    >تاریخ مقرر <span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    class="form-control persian-datepicker"
                    id="taskDueDate"
                    name="scheduledend"
                    placeholder="تاریخ مقرر"
                    required
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="taskPriority" class="form-label">اولویت</label>
                  <select
                    class="form-select"
                    id="taskPriority"
                    name="prioritycode"
                  >
                    <option value="1" selected>Normal</option>
                    <option value="2">High</option>
                    <option value="0">Low</option>
                  </select>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="taskRegarding" class="form-label">مرتبط با</label>
                  <select
                    class="form-select"
                    id="taskRegarding"
                    name="regardingobjectid"
                  >
                    <option value="">انتخاب کنید...</option>
                  </select>
                </div>
              </div>
              <div class="mb-3">
                <label for="taskOwner" class="form-label">مالک</label>
                <select
                  class="form-select"
                  id="taskOwner"
                  name="ownerid"
                  required
                >
                  <option value="<%= user.id %>" selected>
                    <%= user.fullname %>
                  </option>
                </select>
              </div>
              <!-- Add more fields as needed -->
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                بستن
              </button>
              <button type="submit" class="btn btn-primary">ایجاد وظیفه</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Toasts -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div
        id="errorToast"
        class="toast bg-danger text-white"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="toast-body"></div>
      </div>
      <div
        id="successToast"
        class="toast bg-success text-white"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="toast-body"></div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.17/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/luxon@3.4.4/build/global/luxon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/min/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment-timezone@0.5.43/builds/moment-timezone-with-data.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment-jalaali@0.10.4/builds/moment-jalaali.js"></script>
    <script>
      // Set current user information
      window.currentUser = {
        id: "<%= user.id %>",
        fullname: "<%= user.fullname %>",
      };
    </script>
    <script src="/js/dashboard.js"></script>
  </body>
</html>
